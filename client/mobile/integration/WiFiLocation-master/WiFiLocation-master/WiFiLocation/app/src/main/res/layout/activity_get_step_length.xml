<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_get_step_length"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lavender.wifilocation.GetStepLengthActivity">

    <Button
        android:text="开始采集"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="34dp"
        android:id="@+id/btnStart" />

    <Button
        android:text="结束采集"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnStart"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="73dp"
        android:id="@+id/btnEnd" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnStart"
        android:layout_marginTop="31dp"
        android:id="@+id/txtStepLength"
        android:layout_alignEnd="@+id/btnEnd"
        android:layout_toEndOf="@+id/btnStart" />

    <TextView
        android:text="采集人行步长（请到开阔地带）"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEnd"
        android:id="@+id/txtTitle"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtStepLength"
        android:layout_marginTop="23dp"
        android:id="@+id/txtLongitude"
        android:layout_alignEnd="@+id/txtStepLength"
        android:layout_alignStart="@+id/txtStepLength" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLongitude"
        android:layout_alignStart="@+id/txtLongitude"
        android:layout_marginTop="23dp"
        android:id="@+id/txtLatitude"
        android:layout_alignEnd="@+id/txtLongitude" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/txtStepCount"
        android:layout_alignStart="@+id/txtLatitude" />

    <TextView
        android:text="经度："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtLatitude"
        android:layout_alignStart="@+id/btnStart"
        android:id="@+id/textView5" />

    <TextView
        android:text="步长："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/txtStepLength"
        android:layout_alignBottom="@+id/txtStepLength"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="纬度："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtLatitude"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/textView6" />

    <TextView
        android:text="步数："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/textView7" />

</RelativeLayout>
