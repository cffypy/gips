<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.peiyuyu.accelerator.MainActivity">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/t"
      android:layout_marginTop="100dp"
      android:layout_marginLeft="100dp"
      android:text="这里显示重力加速度"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="重力加速度："
      android:id="@+id/t1"
      android:layout_marginLeft="20dp"
      android:layout_alignTop="@+id/t"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/t1"
      android:text="磁场数据:"
      android:id="@+id/h"
      android:layout_below="@+id/t"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tc"
      android:layout_alignTop="@+id/h"
      android:layout_alignLeft="@+id/t"
      android:text="这里显示磁场数据"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/h1"
      android:text="陀螺仪数据："
      android:layout_alignLeft="@+id/t1"
      android:layout_below="@+id/tc"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/tt"
      android:layout_alignTop="@id/h1"
      android:layout_alignLeft="@+id/tc"
      android:text="这里显示陀螺仪数据"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="方向数据："
      android:id="@+id/h2"
      android:layout_below="@+id/tt"
      android:layout_alignLeft="@+id/h1"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/t2"
      android:text="这里显示方向数据"
      android:layout_alignTop="@+id/h2"
      android:layout_alignLeft="@+id/tt"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="停止"
      android:id="@+id/stop"
      android:layout_alignParentTop="true"
      android:layout_centerInParent="true"/>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="开始"
      android:id="@+id/start"/>

  <TextView
      android:id="@+id/stepc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/t2"
      android:layout_alignLeft="@+id/h1"
      android:text="目前步数：" />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/step"
      android:text="已经走了多少步"
      android:layout_below="@+id/t2"
      android:layout_alignLeft="@id/t2"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="当前步长："
      android:layout_below="@+id/step"
      android:layout_alignLeft="@+id/h1"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/steplength"
      android:layout_alignLeft="@+id/step"
      android:text="当前步长"
      android:layout_below="@+id/step"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="行走的距离:"
      android:layout_below="@+id/steplength"
      android:layout_alignLeft="@+id/h1"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/steplength"
      android:layout_alignLeft="@id/step"
      android:id="@+id/length"
      android:text="行走的距离"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="现在的位置："
      android:layout_alignLeft="@+id/h1"
      android:layout_below="@+id/length"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignLeft="@+id/length"
      android:id="@+id/pos"
      android:text="现在的位置"
      android:layout_below="@+id/length"/>



</RelativeLayout>
